<brls:Box
    width="150"
    height="200"
    axis="column"
    alignItems="stretch"
    focusable="true">

    <brls:Image
        id="image"
        width="auto"
        height="auto"
        grow="1"
        scalingType="fill"/>

    <brls:Box
        detachedX="0"
        detachedY="0"
        width="142"
        height="200"
        axis="column"
        direction="rightToLeft"
        justifyContent="flexStart"
        alignItems="stretch">
        
        <brls:Image
            id="favorite_app_image"
            width="34"
            height="34"
            marginTop="8"
            image="@res/img/star.png"
            scalingType="stretch"/>
        
        <brls:Image
            id="current_app_image"
            width="34"
            height="34"
            marginTop="8"
            image="@res/img/play.png"
            scalingType="stretch"/>
    </brls:Box>

    <brls:Box
        detachedX="0"
        detachedY="0"
        width="150"
        height="200"
        axis="column"
        justifyContent="flexEnd">
        
        <brls:Box
            width="auto"
            height="auto"
            axis="column"
            justifyContent="center"
            backgroundColor="@theme/brls/backdrop"
            padding="8">
        
            <brls:Label
                id="title"
                width="auto"
                height="auto"
                horizontalAlign="center"
                fontSize="12"/>
                
        </brls:Box>
            
    </brls:Box>

</brls:Box>
