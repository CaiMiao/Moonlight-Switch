<brls:Box
    width="auto"
    height="auto">

    <brls:ScrollingFrame
        width="auto"
        height="auto"
        axis="column"
        alignItems="stretch"
        grow="1.0" >
        
        <brls:Box
            width="10000"
            height="auto"
            axis="column"
            alignItems="stretch"
            paddingTop="@style/brls/sidebar/padding_top"
            paddingRight="@style/brls/sidebar/padding_right"
            paddingBottom="@style/brls/sidebar/padding_bottom"
            paddingLeft="@style/brls/sidebar/padding_left">
            
            <brls:Header
                title="@i18n/main/settings/quality"/>
                
            <brls:SelectorCell
                id="fps"/>
                    
            <brls:SelectorCell
                id="resolution"/>
                
            <brls:SelectorCell
                id="codec"/>
                
            <brls:SelectorCell
                id="decoder"/>
        
            <brls:Header
                id="header"
                title="@i18n/main/settings/video_bitrate"
                subtitle="10.0 Mbps"
                paddingTop="60"/>
                
            <brls:Slider
                id="slider"
                width="auto"
                height="84"
                grow="1"
                lineBottom="1px"/>
            
            <brls:Header
                title="@i18n/main/settings/stream_settings"
                paddingTop="60"
                lineTop="1px"/>
                
            <brls:BooleanCell
                id="optimal"/>
            
            <brls:BooleanCell
                id="pcAudio"/>
                
            <brls:BooleanCell
                id="volume_amplification"/>
                
            <brls:Header
                title="@i18n/main/settings/keys"
                paddingTop="60"/>
                
            <brls:BooleanCell
                id="swap_ui"/>
                
            <brls:BooleanCell
                id="swap_game"/>
                
            <brls:Header
                title="@i18n/main/settings/guide_key"
                paddingTop="60"/>
            
            <brls:DetailCell
                id="guide_key_buttons"/>
                
            <brls:Header
                title="@i18n/main/settings/overlay"
                paddingTop="60"/>
                
            <brls:SelectorCell
                id="overlay_time"/>
            
            <brls:DetailCell
                id="overlay_buttons"/>
                
            <brls:Header
                title="@i18n/main/settings/mouse"
                paddingTop="60"/>
                
            <brls:BooleanCell
                id="swap_mouse_keys"/>
                
            <brls:BooleanCell
                id="swap_mouse_scroll"/>
                
            <brls:Header
                title="@i18n/main/settings/debug"
                paddingTop="60"/>
                
            <brls:BooleanCell
                id="writeLog"/>
            
        </brls:Box>

    </brls:ScrollingFrame>

</brls:Box>
