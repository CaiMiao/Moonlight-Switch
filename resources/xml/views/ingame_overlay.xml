<brls:Box
    width="auto"
    height="auto"
    backgroundColor="@theme/brls/backdrop">
    
    <brls:AppletFrame
        id="applet"
        width="80%"
        height="auto"
        backgroundColor="@theme/brls/background">
    
        <brls:ScrollingFrame
            width="auto"
            height="auto"
            axis="column"
            alignItems="stretch"
            grow="1.0" >
            
            <brls:Box
                width="10000"
                height="auto"
                axis="column"
                alignItems="stretch"
                paddingTop="@style/brls/sidebar/padding_top"
                paddingRight="@style/brls/sidebar/padding_right"
                paddingBottom="@style/brls/sidebar/padding_bottom"
                paddingLeft="@style/brls/sidebar/padding_left">
            
                <brls:Header
                    id="header"
                    title="Connection"/>
                    
                <brls:DetailCell
                    id="terminate"/>
            
            </brls:Box>
            
        </brls:ScrollingFrame>
    
    </brls:AppletFrame>
    
</brls:Box>
