<brls:Box
    width="auto"
    height="auto">
    
    <brls:ScrollingFrame
        width="auto"
        height="auto"
        axis="column"
        alignItems="stretch"
        grow="1.0" >
        
        <brls:Box
            width="10000"
            height="auto"
            axis="column"
            alignItems="stretch"
            paddingTop="@style/brls/sidebar/padding_top"
            paddingRight="@style/brls/sidebar/padding_right"
            paddingBottom="@style/brls/sidebar/padding_bottom"
            paddingLeft="@style/brls/sidebar/padding_left">
            
            <brls:Header
                title="@i18n/main/streaming/input"/>
            
            <brls:BooleanCell
                id="input_overlay"/>
            
            <brls:Header
                id="volume_header"
                paddingTop="60"
                title="@i18n/main/streaming/volume"/>
                
            <brls:Slider
                id="volume_slider"
                width="auto"
                height="84"/>
            
            <brls:Header
                title="@i18n/main/settings/debug"
                paddingTop="60"
                lineTop="1px"/>
                
            <brls:BooleanCell
                id="debug"/>
                
            <brls:BooleanCell
                id="onscreen_log"/>
        
        </brls:Box>
    
    </brls:ScrollingFrame>
    
</brls:Box>
